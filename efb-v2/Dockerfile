FROM alpine
MAINTAINER AKira <e.akimoto.akira@gmail.com>

ENV LANG C.UTF-8

RUN set -ex \
        && apk update && apk upgrade \
        && apk add --no-cache udns \
        && apk add --no-cache --virtual .run-deps \
                ca-certificates \
                ffmpeg \
                libmagic \
                python3 \
                tiff \
                libwebp \
                freetype \
                lcms2 \
                openjpeg \
                py3-olefile \
                openblas \
                py3-numpy \
                py3-pillow \
                py3-yaml \
                py3-requests \
                py3-cryptography \
                py3-decorator \
                git \
                jpeg-dev \
                zlib-dev \
                tzdata \
                iproute2 \
                cairo-dev \
                cairo \
                cairo-tools \
                jpeg-dev \
                freetype-dev \
                lcms2-dev \
                openjpeg-dev \
                tiff-dev \
                tk-dev \
                tcl-dev \
        && ln -sf /usr/share/zoneinfo/Asia/Shanghai /etc/localtime \
        && echo "Asia/Shanghai" > /etc/timezone

RUN set -ex \
        && pip3 install --upgrade pip \
        && pip3 install ehforwarderbot==2.0.0b25 \
        && pip3 install efb-telegram-master==2.0.0b39 \
        && pip3 install efb-wechat-slave==2.0.0a38 \
        && pip3 install efb-qq-slave==2.0.0a12 \
        && sed -i 's/channel_emoji = "ğŸ’¬"/channel_emoji = "ğ™’ğ™šğ™˜ğ™ğ™–ğ™©"/g' /usr/lib/python3.8/site-packages/efb_wechat_slave/__init__.py \
        && sed -i "s/Emoji.get_source_emoji(self.chat_type)/' |'/g" /usr/lib/python3.8/site-packages/efb_telegram_master/chat.py

CMD ["ehforwarderbot"]
